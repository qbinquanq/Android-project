<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:paddingTop="40dp"
            android:paddingBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/paid_successful_mark"
            android:drawablePadding="5dp"
            android:textSize="20sp"
            android:text="Congratulation, You Paid Successfully!"/>
        <Button
            android:background="#f0654a"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep Shopping"
            android:textColor="@android:color/white"
            android:layout_marginBottom="30dp"
            android:id="@+id/keep_shopping" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0dfdf"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Share with friends"/>
        <View
            android:background="#e0dfdf"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"/>
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Check the history"/>
    </LinearLayout>

</LinearLayout>