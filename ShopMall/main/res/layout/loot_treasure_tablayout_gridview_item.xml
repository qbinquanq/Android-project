<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants">
    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/loot_treasure_second_tablayout_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/loot_treasure_second_tablayout_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textSize="12dp"
                android:textColor="#b0aeae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drawing_progress"/>

            <ProgressBar
                android:layout_marginTop="5dp"
                android:progressDrawable="@drawable/custom_progressbar"
                android:layout_width="90dp"
                android:layout_height="8dp"
                android:progress="50"
                style="?android:attr/progressBarStyleHorizontal"/>
        </LinearLayout>
        <Button
            android:layout_gravity="fill_vertical"
            android:layout_marginStart="5dp"
            android:id="@+id/loot_treasure_second_tablayout_button"
            android:textColor="@android:color/holo_red_light"
            android:background="@drawable/custom_button"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="@string/add_to_shopping_cart"
            android:layout_marginBottom="20dp"
            android:textSize="8sp"
        />
    </LinearLayout>
</LinearLayout>