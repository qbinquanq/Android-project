<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="156dp"
    android:clipChildren="false"
    android:background="#f87d5b">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_alignTop="@+id/portrait"
        android:layout_toEndOf="@+id/portrait"
        android:id="@+id/textView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/point_textview"
        android:layout_toEndOf="@+id/portrait" />

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/question_mark"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageView" />
    <TextView
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="5dp"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points: 20"
        android:layout_above="@+id/self_linearlayout"
        android:layout_alignEnd="@+id/imageView"
        android:id="@+id/point_textview" />
        <RelativeLayout

            android:orientation="horizontal"
            android:id="@+id/self_linearlayout"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#ed6440"
            android:clipChildren="false">

            <TextView
                android:padding="4dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LvL 1"
                android:background="@drawable/level_border"
                android:textColor="#6bc656"
                android:layout_marginStart="51dp"
                android:layout_marginTop="25dp"
                android:layout_alignParentStart="true" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:scaleType="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/me_goldbean"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="20"
                    android:layout_gravity="center"
                    android:textColor="@android:color/holo_green_light"
                    android:layout_marginEnd="30dp"/>
                <ImageView

                    android:scaleType="center"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/me_silverbean"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <Button
                android:layout_marginEnd="5dp"
                android:textAlignment="center"
                android:id="@+id/charge"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:backgroundTint="#fefefe"
                android:textSize="18sp"
                android:singleLine="true"
                android:text="@string/charge"
                android:textColor="@android:color/holo_red_light"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    <com.apptouch.binquanwang.shopmall.CircleImageView
        android:layout_marginTop="30dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/portrait"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/portrait"
        app:civ_border_width="4dp"
        app:civ_border_color="@android:color/white"
        app:civ_border_overlay="true"
        android:alpha="30"/>
</RelativeLayout>